# EditorConfig - Configuração universal para editores
# https://editorconfig.org

# Configuração raiz
root = true

# Configuração para todos os arquivos
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# Arquivos JavaScript/TypeScript
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 180

# Arquivos JSON
[*.json]
indent_size = 2

# Arquivos YAML
[*.{yml,yaml}]
indent_size = 2

# Arquivos Markdown
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Arquivos PHP
[*.php]
indent_size = 4
max_line_length = 180

# Arquivos CSS/SCSS
[*.{css,scss,sass}]
indent_size = 2
max_line_length = 180

# Arquivos HTML
[*.{html,htm}]
indent_size = 2
max_line_length = 180

# Arquivos de configuração
[*.{ini,conf,config}]
indent_size = 2

# Arquivos de package managers
[package.json]
indent_size = 2

[package-lock.json]
indent_size = 2

[yarn.lock]
indent_size = 2

# Arquivos de ambiente
[.env*]
indent_size = 2

# Arquivos de documentação
[*.{txt,rst}]
trim_trailing_whitespace = false
max_line_length = 180
