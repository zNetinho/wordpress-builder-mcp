{
  "name": "repo-base",
  "version": "1.0.0",
  "description": "Template base para projetos Fibboweb com padrões de código e desenvolvimento",
  "main": "index.js",
  "author": "fibboweb <seodev@liveseo.com.br>",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "prepare": "husky",
    "precommit": "node scripts/precommit-check.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "echo \"No tests specified\" && exit 0",
    "validate": "npm run lint && npm run format:check && npm run type-check",
    "clean": "rm -rf dist build .next out coverage",
    "dev": "echo \"Configure your dev script\"",
    "build": "echo \"Configure your build script\"",
    "start": "echo \"Configure your start script\""
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^9.1.7",
    "prettier": "^3.1.0",
    "typescript": "^5.3.2"
  },
  "keywords": [
    "template",
    "fibboweb",
    "eslint",
    "prettier",
    "husky",
    "commitlint",
    "code-standards"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/fibboweb/repo-base.git"
  },
  "bugs": {
    "url": "https://github.com/fibboweb/repo-base/issues"
  },
  "homepage": "https://github.com/fibboweb/repo-base#readme"
}
